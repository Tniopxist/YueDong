<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/history"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECECEC"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".HistoryActivity">

    <!--顶部导航栏-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:layout_alignParentTop ="true">


        <TextView
            android:id="@+id/textView"
            android:layout_width="150dp"
            android:layout_height="64dp"
            android:gravity="center"
            android:text="运动历史"
            android:textSize="25sp"
            android:textStyle="bold" />



    </RelativeLayout>


    <!--页面内容-->

    <!--静态的下面是-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="64dp"
        android:orientation="vertical"
        android:background="@drawable/home"
        android:padding="30dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:background="@drawable/radius_shape">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/historyTime"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="运动时间：xxxmin"
                    android:textSize="20dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_line_dash" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="113dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/historyMileDescription"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:text="里程"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/historyMile"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:text="xxxkm"
                        android:gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="114dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/historySpeedDescription"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:text="配速"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/historySpeed"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:text="xxxkm/h"
                        android:gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="113dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/historyCalDescription"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:text="能量"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/historyCal"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:text="xxxkcal"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <!--底部导航栏-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF">


        <LinearLayout
            android:layout_width="136dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/picHealth"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:srcCompat="@drawable/health"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"
                />

            <TextView
                android:id="@+id/textHealth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="健康"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="137dp"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/picExercise"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:srcCompat="@drawable/exercise"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"/>

            <TextView
                android:id="@+id/textExercise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="运动"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="139dp"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/picSetting"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:srcCompat="@drawable/setting"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"/>

            <TextView
                android:id="@+id/textSetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="健康"
                android:gravity="center"/>


        </LinearLayout>
    </LinearLayout>



</RelativeLayout>